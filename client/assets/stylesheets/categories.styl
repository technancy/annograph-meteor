.key-categories {
  margin: 0 0 15px 0;
  float: left;
  clear: both;
  width: 100%;
  font: normal small-caps bold 12px/14px Helvetica, Verdana, Arial;
  span {
    background: #000;
    color: white;
    padding: 0 0 2px 8px;
    margin: 2px 0 0 0;
    display: inline-block;

    i {
      cursor: pointer;
      background: #DDD;
      padding: 0 5px;
      color: #000;
      margin: 0 0 0 8px;
      border: solid 1px #000;
      &:hover {
        background: white;
        color: red;
        border: solid 1px red;
      }
    }
  }
}